BEGIN_ACTION_DEFINITION
  Name(Spell)
  TRIGGER
    !GlobalTimerNotExpired("cast","LOCALS")
    HaveSpell(scsargument1)
  ACTION
    RESPONSE #scsprob1
      SetGlobalTimer("cast","LOCALS",6)
      Spell(scstarget,scsargument1)
END

