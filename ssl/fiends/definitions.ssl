BEGIN_ACTION_DEFINITION
  Name(ForceSpellRES)
  TRIGGER
    !GlobalTimerNotExpired("cast","LOCALS")
  ACTION
    RESPONSE #scsprob1
      SetGlobalTimer("cast","LOCALS",6)
      ForceSpellRES(scsargument1,scstarget)
END  

BEGIN_ACTION_DEFINITION
  Name(ForceSpell)
  TRIGGER
    !GlobalTimerNotExpired("cast","LOCALS")
  ACTION
    RESPONSE #scsprob1
      SetGlobal("cast","LOCALS",6)
      ForceSpell(scstarget,scsargument1)
END

