//Pursue
INCLUDE FILE(include/pursue.ssl)

//Just keep busy
IF
  ActionListEmpty()
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
  AttackOneRound(LastSeenBy(Myself))
END

IF
  ActionListEmpty()
  !Allegiance(Myself,ENEMY)
  AttackedBy([ANYONE],DEFAULT)
  See(LastAttackerOf(Myself))
THEN
  RESPONSE #100
  AttackOneRound(LastAttackerOf(Myself))
END
